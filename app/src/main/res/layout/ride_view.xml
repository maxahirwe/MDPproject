<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ride_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/ride_view_shape"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="22/July/1997"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_provider_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Provided By:John Peter"
        android:textAlignment="center"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_origin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:lines="2"
            android:maxLines="3"
            android:minLines="2"
            android:paddingLeft="20dp"
            android:singleLine="false"
            android:text="FairField"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView_right_arrow"
                android:layout_width="25dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/right_arrow" />

            <ImageView
                android:id="@+id/imageView_left_arrow"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:visibility="gone"
                app:srcCompat="@drawable/left_arrow" />
        </LinearLayout>


        <TextView
            android:id="@+id/txt_destination"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:text="Chicago"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_cost_sharing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="Cost Sharing"
        android:textSize="9sp"
        android:visibility="invisible" />


</LinearLayout>
